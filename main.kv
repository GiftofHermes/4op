#:kivy 1.10
<MyButton@Button>:
    text: "None"

BoxLayout:
    orientation: "vertical"
    Label:
        text: "The goal is %s" % app.goal
    GridLayout:
        cols:4
        rows:2
        row_default_height:'60'
        row_force_default:'True'
        col_default_width:'100'
        col_force_default:'True'
        MyButton:
            num: 1
            text: str(app.num1)
            on_release: self.on_num_pressed()
        MyButton:
            num: 2
            text: str(app.num2)
            on_release: self.on_num_pressed()
        MyButton:
            num: 3
            text: str(app.num3)
            on_release: self.on_num_pressed()
        MyButton:
            num: 4
            text: str(app.num4)
            on_release: self.on_num_pressed()
        MyButton:
            num: 5
            text: str(app.num5)
            on_release: self.on_num_pressed()
        MyButton:
            num: 6
            text: str(app.num6)
            on_release: self.on_num_pressed()
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        GridLayout:
            cols:5
            rows:1
            row_default_height:'40'
            row_force_default:'True'
            col_default_width:'80'
            col_force_default:'True'
            padding: '5'
            Button:
                text:'+'
                on_release: app.on_op_pressed("+")
            Button:
                text:'-'
                on_release: app.on_op_pressed("-")
            Button:
                text:'x'
                on_release: app.on_op_pressed("x")
            Button:
                text:'/'
                on_release: app.on_op_pressed("/")
            Button:
                text:'Break'
                on_release: app.on_op_pressed("Break")